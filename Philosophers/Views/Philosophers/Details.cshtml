@model Philosophers.Models.Philosopher

@{
    ViewBag.Title = Model.FullName;
}

<h2>@Model.FullName</h2>
<h4>@Html.ActionLink(Model.Area.Name, "Details", "Areas", new { areaName = Model.Area.Name }, null)</h4>

<div class="row">
    <div class="col-md-6">
        <div class="well">
            
            <img src="~/Content/Images/@Model.ImgUrl"
                 alt="No image found" class="img-responsive philosopher-details" />
            <dl class="dl-horizontal">

                <dt>
                    @Html.DisplayNameFor(m => m.Nationality)
                </dt>

                <dd>
                    @Html.DisplayFor(m => m.Nationality.Name)
                </dd>

                <dt>
                    @Html.DisplayNameFor(m => m.DateOfBirth)
                </dt>

                <dd>
                    @String.Format("{0:dd/MM/yyyy}", Model.DateOfBirth)
               </dd>

                @if (Model.DateOfDeath.HasValue)
                {
                    <dt>
                        @Html.DisplayNameFor(m => m.DateOfDeath)
                    </dt>

                    <dd>
                        @String.Format("{0:dd/MM/yyyy}", Model.DateOfDeath)
                    </dd>
                }

                <dt>
                    Age
                </dt>
                <dd>
                    @Model.calculateAge() years old
                </dd>

            </dl>
        </div>
    </div>

    <div class="col-md-6">
        <h4>@Html.DisplayNameFor(m => m.Description)</h4>
        <p>@Html.DisplayFor(m => m.Description)</p>
        <div class="form-actions no-color">
            @Html.ActionLink("Edit", "Edit", new { lastName = Model.LastName }, new { @class = "btn btn-default" })
            @Html.ActionLink("Delete", "Delete", new { lastName = Model.LastName }, new { @class = "btn btn-default" })
            @Html.ActionLink("Back to Philosophers", "Index", null, new { @class = "btn btn-default" })
         </div>
    </div>
</div>
