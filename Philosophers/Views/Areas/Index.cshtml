@model IEnumerable<Philosophers.Models.Area>

@{
    ViewBag.Title = "Areas";
}

<h2>@ViewBag.Title</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(m => m.Name)
        </th>
        <th>
            @Html.DisplayNameFor(m => m.Description)
        </th>
        <th>
            Number of philosophers
        </th>
    </tr>

    @foreach (var area in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(area.Name, "Details", new { areaName = area.Name })
            </td>
            <td>
                @Html.DisplayFor(a => area.Description)
            </td>
            <td class="text-center">
                @area.Philosophers.Count
            </td>
        </tr>
    }

</table>
