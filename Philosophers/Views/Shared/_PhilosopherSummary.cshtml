@model Philosophers.Models.Philosopher

<div class="col-sm-4">
    <div class="clearfix">
        <a href="@Url.Action("Details", "Philosophers", new { lastName = Model.LastName })">
            <img src="@Url.Content(Model.ImgURL)"
                 alt="No image found"
                 class="img-responsive philosopher-summary" />
        </a>
    </div>
    <h4>@Html.ActionLink(Model.FullName, "Details", "Philosophers", new { lastName = Model.LastName }, null)</h4>
</div>